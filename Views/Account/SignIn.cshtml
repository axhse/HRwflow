@model SignInVM
@{
	ViewData["Title"] = "Sign In";
}

<div class="navbar custom-navbar border-bottom">
	<div class="container" align="center">
		<div class="col-12 col-sm-4">
			<a class="link-dark" href="/account/signup">
				Зарегистрироваться
			</a>
		</div>
		<div class="col-6 col-sm-4 mt-3">
			<p class="text-dark fw-bold">Авторизация</p>
		</div>
		<div class="col-6 col-sm-4">
			<a class="link-dark" href="/">На главную</a>
		</div>
	</div>
</div>

<div class="container mt-4" align="center">
	<div class="col-10 col-sm-7 col-md-6 col-lg-5 col-xl-4">
		<form method="POST">
			<div>
				<label for="usernameInput" class="form-label">Логин</label>
				<input type="text" class="form-control text-center" id="usernameInput"
						name="username" value="@Model.DefaultUsername">
				@if (!Model.IsUserExists)
				{
					<p class="text-info">Пользователь не найден.</p>
				}
			</div>
			<div class="mt-3">
				<label for="passwordInput" class="form-label">Пароль</label>
				<input type="password" class="form-control text-center"
						id="passwordInput" name="password">
				@if (!Model.IsPasswordValid && Model.IsUserExists)
				{
					<p class="text-info">Неправильный пароль.</p>
				}
			</div>
			<div class="mt-4" align="left">
				<input class="form-check-input ms-3 me-2" type="checkbox" id="rememberMeChecker"
					name="rememberMe" @(Model.RememberMeChecked ? "checked" : "")>
				<label for="rememberMeChecker" class="form-check-label text-dark">
					Запомнить меня
				</label>
			</div>
			<div class="mt-4">
				<button type="submit" class="btn btn-primary">
					Войти
				</button>
			</div>
		</form>
	</div>
</div>
