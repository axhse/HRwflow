@model ControllerErrorVM
@{
    ViewData["Title"] = "Error";
	TempData["Error-text"] = Model.Error switch
	{
		ControllerErrors.OperationFaulted => "Выполняемая операция была прервана по ошибке сервера.",
		ControllerErrors.RequestUnsupported => "Запросы данного типа не поддерживаются.",
		_ => null
	};
}

<div class="container" align="center">
	<h4 class="text-info fw-bold mt-5">В процессе обработки запроса произошла ошибка.</h4>

	@if (TempData["Error-text"] is not null)
	{
		<p class="text-dark fw-bold mt-4">@TempData["Error-text"]</p>
	}
</div>
