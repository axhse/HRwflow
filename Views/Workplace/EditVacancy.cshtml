@model EditVacancyPropertiesVM
@{
	ViewData["Title"] = "Edit Vacancy";
	var vacancyStateNames = new Dictionary<VacancyStates, string>
	{
		[VacancyStates.Active] = "Активная",
		[VacancyStates.Completed] = "Завершенная"
	};
}

<div class="navbar custom-navbar border-bottom">
	<div class="container" align="center">
		<div class="col-12 mt-3">
			<p class="text-dark fw-bold">Редактирование вакансии</p>
		</div>
	</div>
</div>

<div class="container mt-5" align="center">
	<div class="col-10 col-sm-7 col-md-6 col-lg-5 col-xl-4">
		<form method="POST">
			<div class="form-group" align="left">
				<label for="titleInput" class="form-label">Названиe</label>
				<input class="form-control" id="titleInput" name="title"
					value="@Model.VacancyProperties.Title">
				@if (!Model.IsTitleCorrect)
				{
					<p class="text-info">
						Название должно иметь длину от 1 до 100 символов.
					</p>
				}
			</div>
			<div class="form-group mt-4" align="left">
				<label for="descriptionInput" class="form-label">
					Дополнительная информация
				</label>
				<textarea class="form-control" id="descriptionInput"
					name="description" rows="6"
					>@Model.VacancyProperties.Description</textarea>
				@if (!Model.IsDescriptionCorrect)
				{
					<p class="text-info">
						Описание должно иметь длину до 1000 символов.
					</p>
				}
			</div>
			<div class="form-group mt-4">
				<div class="d-inline-block">
					@foreach(var state in Enum.GetValues<VacancyStates>())
					{
						var stateValue = state.ToString();
						var buttonId = $"{state}Radio";
						<input class="form-check-input ms-3" type="radio"
							name="vacancyState" id="@buttonId" value="@stateValue"
							@(Model.VacancyProperties.State == state ? "checked" : "")>
						<label class="form-check-label" for="@buttonId">
							@vacancyStateNames[state]
						</label>
						
					}
				</div>
			</div>
			<div class="mt-5">
				<button type="submit" class="btn btn-success">
					Сохранить
				</button>
			</div>
		</form>
	</div>
	<div class="mt-4">
		<a class="link-secondary" 
				href="/workplace/vacancy?vacancyId=@Model.VacancyId">
			Вернуться
		</a>
	</div>
</div>
