@model ErrorVM<CommonErrors>
@{
	ViewData["Title"] = "Error";
	var errorText = Model.Error switch
	{
		CommonErrors.NoPermission
			=> "У вас нет разрешения на данное действие.",
		CommonErrors.ResourceNotFound => "Ресурс не существует"
			+ " или имеет ограниченный доступ.",
		_ => null
	};
}

<div class="container" align="center">
	<div class="mt-5">
		<h4 class="text-info fw-bold">Ошибка.</h4>
	</div>
	@if (errorText is not null)
	{
		<div class="mt-4">
			<p class="text-dark fw-bold">@errorText</p>
		</div>
	}
	<div class="mt-5">
		<a class="link-secondary" href="/account">
			Вернуться на главную страницу
		</a>
	</div>
</div>
